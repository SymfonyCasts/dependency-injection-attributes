{% extends 'base.html.twig' %}

{% block title %}SmartTV Remote{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold underline">
        SmartTV Remote
    </h1>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <form method="post">
        <ul>
            <li>
                <button name="button" value="power">
                    Power
                </button>
            </li>
            <li>
                <button name="button" value="channel-up">
                    Channel Up
                </button>
            </li>
            <li>
                <button name="button" value="channel-down">
                    Channel Down
                </button>
            </li>
            <li>
                <button name="button" value="volume-up">
                    Volume Up
                </button>
            </li>
            <li>
                <button name="button" value="volume-down">
                    Volume Down
                </button>
            </li>
        </ul>
    </form>
{% endblock %}
